@model List<EscalaWebMvc.Models.Escala>

<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th scope="col">Data</th>
            <th scope="col">-</th>
            <th scope="col">Recepcionistas</th>
            <th scope="col">-</th>
            <th scope="col">Equipe Limpeza</th>
            <th scope="col">-</th>
            <th scope="col">Professores (ordem por horário)</th>
        </tr>
        @foreach (var escala in Model)
        {
            <tr class="table-secondary">
                <td scope="row">@escala.Data.ToShortDateString()</td>
                @foreach (var setor in escala.FuncionariosPorTurno)
                {
                    <td scope="row">@setor.Key.Zona</td>
                    <td scope="rowgroup">@string.Join(", ", setor.Value.Select(f => f.Name))</td>
                }
            </tr>
        }
    </thead>
</table>
